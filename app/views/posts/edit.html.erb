<h1>投稿編集</h1>

<%= form_with model:@post, local: true do |f| %>

<div>
  <%= f.label "実施エリア" %>
  <%= f.text_field :area %>
</div>

<div>
  <%= f.label "タグ" %>
  <%= f.text_field :tag_ids, value: @tag_list, placeholder: "複数タグを登録する場合は','で区切ってください。" %>
</div>

<div>
  <%= f.label "内容" %>
  <%= f.text_area :body %>
</div>

<div>
  <%= f.submit "更新" %>
</div>

<% end %>

<%= link_to "戻る", post_path(@post) %>