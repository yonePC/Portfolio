<h1>投稿一覧</h1>

<table class= "table">
  <thead>
    <tr>
      <th></th>
      <th>社員番号</th>
      <th>名前</th>
      <th>実施エリア</th>
      <th>内容</th>
      <th></th>
    </tr>
  <thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <%= post.datetime %>
      </td>

      <td>
        <%= post.user.number %>
      </td>

      <td>
        <%= post.user.name %>
      </td>

      <td>
        <%= post.area %>
      </td>

      <td>
        <%= post.body %>
      </td>

      <td>
        <%= link_to "詳細", post_path(post) %>
      </td>

    </tr>
    <% end %>
  </tbody>

</table>

