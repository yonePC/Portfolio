<header>
    <nav class="navbar navbar-expand-lg navbar-dark header_color">
      <div class="container">
        <div class="navbar-brand">店内連携くん</div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li><%= link_to "マイページ",user_path(current_user),class: "fas fa-home nav-link" %></li>
            <li><%= link_to "ユーザー",users_path,class: "fas fa-users nav-link " %></li>
            <li><%= link_to "投稿",posts_path ,class: "fas fa-book-open nav-link"%>
            <li><%= link_to "通知",notifications_path ,class: "fas fa-bell nav-link" %></li>
              <% if current_user.passive_notifications.where(check: false).any? %>
                <i class="fas fa-circle notification-circle"></i>
              <% end %>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: "fas fa-sign-out-alt nav-link" %></li>
          <% else %>
            <li><%= link_to "トップ",root_path,class: "fas fa-home nav-link" %></li>
            <li><%= link_to "新規登録", new_user_registration_path,class: "fas fa-user-plus nav-link" %></li>
            <li><%= link_to "ログイン", new_user_session_path ,class: "fas fa-sign-in-alt nav-link"%></li>
          <% end %>
        </div>
      </div>
  </nav>
</header>