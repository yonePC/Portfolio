<% if obj.errors.any? %>
  <div class="error_explanation text-center">
    <h3><%= pluralize(obj.errors.count, "件") %> の入力不備があります</h3>
    <ul style="list-style:none;">
      <% obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
