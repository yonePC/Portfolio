<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>ログイン</h2>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= render "layouts/errors", obj: @user %>

        <div class="field">
          <%= f.label :"名前" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-info my-3" %>
        </div>
      <% end %>


      <div>
        登録がお済みでない方は
          <%= link_to "こちら", new_user_registration_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
