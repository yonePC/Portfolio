 <% action_user = notification.action_user %>
 <% ationed_user = notification.ationed_user %>

  <div class = "notification font-weight-bold">
    <%== notification_form(notification) %> <!--notifications_helperに定義-->
    <% if time_ago_in_words(notification.created_at) == "1分以内" %>
      <%= " (#{time_ago_in_words(notification.created_at)})" %>
    <% else %>
      <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
    <% end %>
    <p class="font-weight-normal">
      <%= Post.find_by(id: notification.post_id).body %>
    </p>
  </div>
