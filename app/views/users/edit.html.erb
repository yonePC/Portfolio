<div class="container">
  <div class="row">
    <div class="col-10">
      <h2>ユーザー情報編集</h2>
      <%= form_with model:@user, local: true do |f| %>
      <table>
      <thead></thead>
      <tbody>
        <tr>
          <div>
            <td><%= f.label "名前" %></td>
            <td><%= f.text_field :name %></td>
          </div>
        </tr>

        <tr>
          <div>
            <td><%= f.label "社員番号" %></td>
            <td><%= f.text_field :number %></td>
          </div>
        </tr>

        <tr>
          <div>
            <td><%= f.label "メール" %></td>
            <td><%= f.email_field :email %></td>
          </div>
        </tr>
      </tbody>
      </table>
      <div>
            <td><%= f.submit "更新", class: "btn btn-primary" %></td>
            <td><%= link_to "戻る", user_path(@user) %></td>
      </div>
      <% end %>

    </div>
  </div>
</div>

