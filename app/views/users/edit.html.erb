<h1>ユーザー情報編集</h1>

<%= form_with model:@user, local: true do |f| %>

<div>
  <%= f.label "名前" %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label "社員番号" %>
  <%= f.text_field :number %>
</div>

<div>
  <%= f.label "メール" %>
  <%= f.email_field :email %>
</div>

<div>
  <%= f.submit "更新" %>
</div>

<% end %>

<%= link_to "戻る", user_path(@user) %>

