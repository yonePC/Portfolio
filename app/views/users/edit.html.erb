<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2 class="text-center">ユーザー情報編集</h2>
      <%= form_with model:@user, local: true do |f| %>
      <table>
      <thead></thead>
      <tbody>
        <tr>
          <div>
            <td><%= f.label "名前" %></td>
            <td><%= f.text_field :name, size: "40" %></td>
          </div>
        </tr>

        <tr>
          <div>
            <td><%= f.label "社員番号" %></td>
            <td><%= f.text_field :number, size: "40" %></td>
          </div>
        </tr>

        <tr>
          <div>
            <td><%= f.label "メール" %></td>
            <td><%= f.email_field :email, size: "40" %></td>
          </div>
        </tr>
      </tbody>
      </table>
      <div>
            <td><%= f.submit "更新", class: "btn btn-primary w-75 ml-5 mt-2" %></td>
            
      </div>
      <% end %>
<td><%= link_to "戻る", user_path(@user), class: "btn btn-secondary w-75 ml-5 mt-2" %></td>
    </div>
  </div>
</div>

