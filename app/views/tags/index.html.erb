<h1>タグ一覧</h1>


<table class= "table">
  <thead>
    <tr>
      <th>タグ</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <tr>
    
    <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></td>
      <td>
        <%= link_to "削除", tag_path(tag), method: :delete, data: {confirm: "削除しますか？"} %>
      </td>
    <% end %>
    </tr>

  </tbody>

</table>